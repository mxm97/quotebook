<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap');
    </style>
    <title>QuoteBook</title>
</head>
<body>
    <nav>
        <a href="/quotes">Return to Homepage</a>
        <a href="/quotes/new">Add a quote</a>
    </nav>
    <h1>Favorite Quotes</h1>
    <div id="indexwrapper">
        <% quotes.forEach(quote => { %>
            <% if (quote.favorited === true) { %>
            <div id="indexquote">
                "<%= quote.body %>" 
                </br>
                - <%= quote.author %>
                <form action="/quotes/<%= quote._id %>?_method=PUT" method="POST" style="margin-top: 10px;">
                    <input id="indexbutton" type="submit" value="Remove from Favorites">
                </form>
            </div>
            <% } %>
        <% }) %>
    </div>
</body>
</html>